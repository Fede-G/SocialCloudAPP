<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialcloud">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <!-- You need this for the camera -->
    <uses-feature android:name="android.hardware.camera" />

    <!-- Application Activities -->
    <application
        android:name=".Util.Global"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PhotoSelector"
            android:label="@string/photoselector"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SocialNetwork"
            android:label="@string/title_activity_social_network"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Passphrase"
            android:label="@string/title_activity_passphrase" />
        <activity
            android:name=".Search"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Quit"
            android:label="@string/title_activity_quit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PhotoGallery"
            android:label="@string/title_activity_photo_gallery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UploadPhoto"
            android:label="@string/title_activity_upload_photo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Friendship"
            android:label="@string/title_activity_friendship"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>